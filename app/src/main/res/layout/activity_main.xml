<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohsenqaysi.tbmanagement.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="Hello"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signOut_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="signOut"
        android:text="sign Out" />

    <TextView
        android:id="@+id/userAuth_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:gravity="center"
        android:text="User ID" />

    <Button
        android:id="@+id/SaveData_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SaveUserDateToFirebase"
        android:text="Save Data"
        android:layout_below="@+id/signOut_ID"
        android:layout_alignLeft="@+id/signOut_ID"
        android:layout_alignStart="@+id/signOut_ID"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/showUsersList_ID"
        android:onClick="showUsersList"
        android:text="Show users list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SaveData_ID"
        android:layout_alignLeft="@+id/SaveData_ID"
        android:layout_alignStart="@+id/SaveData_ID"
        android:layout_marginTop="21dp"/>
</RelativeLayout>
