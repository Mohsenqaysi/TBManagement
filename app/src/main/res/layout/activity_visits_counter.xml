<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohsenqaysi.tbmanagement.VisitsCounter"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <NumberPicker
        android:id="@+id/numberPickerMissed_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
       android:layout_marginEnd="8dp"
        android:layout_marginLeft="82dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="243dp" />

    <NumberPicker
        android:id="@+id/numberPickerDone_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_goneMarginStart="8dp"
        tools:layout_editor_absoluteY="325dp" />

    <Button
        android:id="@+id/numberPickerDoneButton_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/numberPickerDone_ID"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/numberPickerDone_ID"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/numberPickerDone_ID" />

    <TextView
        android:id="@+id/ResultTextView_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
