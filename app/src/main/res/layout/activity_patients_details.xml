<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary">

            <TextView
                android:text="Stage: 3"
                android:textStyle="normal"
                android:textColor="@color/tw__solid_white"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/patientDetails_Stage_ID"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/patientsDetails_Image_ID"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/patientDetails_BirthDay_ID"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.49" />

            <ImageView
                android:id="@+id/patientsDetails_Image_ID"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:text="Carolyn Campbell"
                android:textStyle="bold"
                android:textColor="@color/tw__solid_white"
                android:textSize="24sp"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:id="@+id/patientDetails_fullName_ID"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/patientsDetails_Image_ID"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" />

            <TextView
                android:text="Data of birth: 25/02/1823 "
                android:textStyle="normal"
                android:textColor="@color/tw__solid_white"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:id="@+id/patientDetails_BirthDay_ID"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/patientDetails_fullName_ID"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/patientsDetails_Image_ID"
                android:layout_marginLeft="8dp" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/headerImage_ID"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:background="@drawable/header"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:text="Missed Visits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MissedVisists_ID"
                app:layout_constraintRight_toRightOf="@+id/headerImage_ID"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/missed"
                android:textColor="@color/tw__solid_white"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/missed_ID"
                android:textColor="@color/tw__solid_white"
                android:textSize="36sp"
                android:text="2"
                app:layout_constraintRight_toRightOf="@+id/headerImage_ID"
                app:layout_constraintTop_toTopOf="@+id/headerImage_ID"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp" />

            <TextView
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_ID"
                android:textSize="36sp"
                android:textColor="@color/tw__solid_white"
                app:layout_constraintLeft_toLeftOf="@+id/headerImage_ID"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                app:layout_constraintTop_toTopOf="@+id/headerImage_ID"
                android:layout_marginTop="16dp" />

            <TextView
                android:text="Done Visits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pastVisits_ID"
                app:layout_constraintBottom_toBottomOf="@+id/headerImage_ID"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/past"
                app:layout_constraintLeft_toLeftOf="@+id/headerImage_ID"
                android:textColor="@color/tw__solid_white"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" />

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/FloatingActionButton_ID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:src="@drawable/plusicon"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>
