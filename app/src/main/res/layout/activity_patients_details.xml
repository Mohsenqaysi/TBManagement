<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:background="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/constraintLayout3"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/patientDetails_Stage_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Stage: 3"
            android:textColor="@color/tw__solid_white"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/patientsDetails_Image_ID"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patientDetails_BirthDay_ID"
            app:layout_constraintVertical_bias="0.49" />

        <ImageView
            android:id="@+id/patientsDetails_Image_ID"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/patientDetails_fullName_ID"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:text="Carolyn Campbell"
            android:textColor="@color/tw__solid_white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/patientsDetails_Image_ID"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/patientDetails_BirthDay_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Data of birth: 25/02/1823 "
            android:textColor="@color/tw__solid_white"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toRightOf="@+id/patientsDetails_Image_ID"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patientDetails_fullName_ID" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/constraintLayout4">

        <ImageView
            android:id="@+id/headerImage_ID"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/tw__solid_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/MissedVisists_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Missed Visits"
            android:textColor="@color/tw__composer_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/missed_ID"
            app:layout_constraintRight_toRightOf="@+id/missed_ID"
            app:layout_constraintTop_toBottomOf="@+id/missed_ID" />

        <TextView
            android:id="@+id/missed_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:text="0"
            android:textColor="@color/tw__composer_black"
            android:textSize="36sp"
            app:layout_constraintRight_toRightOf="@+id/headerImage_ID"
            app:layout_constraintTop_toTopOf="@+id/headerImage_ID"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/done_ID"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textColor="@color/tw__composer_black"
            android:textSize="36sp"
            app:layout_constraintLeft_toLeftOf="@+id/headerImage_ID"
            app:layout_constraintTop_toTopOf="@+id/headerImage_ID" />

        <TextView
            android:id="@+id/missedVisits_ID"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Done Visits"
            android:textColor="@color/tw__composer_black"
            app:layout_constraintBottom_toBottomOf="@+id/headerImage_ID"
            app:layout_constraintLeft_toLeftOf="@+id/done_ID"
            app:layout_constraintRight_toRightOf="@+id/done_ID"
            app:layout_constraintTop_toBottomOf="@+id/done_ID" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        android:layout_marginTop="5dp"
        android:id="@+id/constraintLayout2">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/cardView4"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:text="Current Drug Use"
                android:textAlignment="center"
                android:textColor="@color/tw__solid_white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"
                app:layout_constraintHorizontal_bias="0.503" />

            <TextView
                android:id="@+id/drugName_ID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/No_date"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/tabTextColor"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.507" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Start Date"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@+id/cardView4"
            app:layout_constraintTop_toBottomOf="@+id/cardView4"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Schedule"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@+id/cardView4"
            app:layout_constraintRight_toRightOf="@+id/cardView4"
            app:layout_constraintTop_toBottomOf="@+id/cardView4" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="End Date"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="@+id/cardView4"
            app:layout_constraintTop_toBottomOf="@+id/cardView4" />

        <TextView
            android:id="@+id/startDateValue_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:text="@string/No_date"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView6"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.464" />

        <TextView
            android:id="@+id/scheduleDateValue_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/No_date"
            android:textAlignment="center"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintLeft_toLeftOf="@+id/textView7"
            app:layout_constraintRight_toRightOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/endDateValue_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:text="@string/No_date"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/textView9"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView9" />

    </android.support.constraint.ConstraintLayout>


    <!-- This is the bottom navigation bar-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FloatingActionButtonPatientDetailsDrugInfo_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:src="@drawable/addpatient"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FloatingActionButtonPatientDetailsVisitInfo_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:src="@drawable/addpatient"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_constraintBottom_toTopOf="@+id/FloatingActionButtonPatientDetailsDrugInfo_ID"
        app:layout_constraintLeft_toLeftOf="@+id/FloatingActionButtonPatientDetailsDrugInfo_ID"
        app:layout_constraintRight_toRightOf="@+id/FloatingActionButtonPatientDetailsDrugInfo_ID"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageButton
        android:id="@+id/infoImageButton_ID"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info_button" />


</android.support.constraint.ConstraintLayout>
