<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohsenqaysi.tbmanagement.Fragments.TodayFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="@string/Today_fragment"
            android:id="@+id/textView"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/Registar_ID"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="104dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:text="Info"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/info_ID"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="@+id/save_data_ID"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp" />

        <Button
            android:text="save data"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="99dp"
            android:layout_height="48dp"
            android:id="@+id/save_data_ID"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/info_ID"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:text="Registar"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/Registar_ID"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="104dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>



    <!-- TODO: Update blank fragment layout -->

</FrameLayout>
